includes:
    - vendor/phpstan/phpstan-strict-rules/rules.neon

parameters:
    level: max
    paths:
        - src
        - tests
    reportUnmatchedIgnoredErrors: false
    ignoreErrors:
        # RedisConnection::keys() is defined but PHPStan fails to detect it in some CI environments (PHP 7.4)
        # This is a false positive - the method exists and is properly defined in src/RedisConnection.php:237
        # This error only occurs in specific PHP versions (7.4) and not locally (8.4)
        -
            message: '#Call to an undefined method Uzulla\\EnhancedRedisSessionHandler\\RedisConnection::keys\(\)\.#'
            path: tests/Integration/UserSessionRegenerateTest.php
