<?xml version="1.0"?>
<ruleset name="Enhanced Redis Session Handler PHPMD Ruleset"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        PHPMD ruleset for Enhanced Redis Session Handler project
    </description>

    <!-- Clean Code Rules -->
    <rule ref="rulesets/cleancode.xml">
        <!-- Allow static access for factory methods and utility classes -->
        <exclude name="StaticAccess"/>
        <!-- Allow else expressions for clearer control flow in some cases -->
        <exclude name="ElseExpression"/>
        <!-- Allow boolean flags in constructors for configuration classes -->
        <exclude name="BooleanArgumentFlag"/>
    </rule>

    <!-- Code Size Rules -->
    <rule ref="rulesets/codesize.xml">
        <!-- Exclude CyclomaticComplexity as it might be too strict for some methods -->
        <exclude name="CyclomaticComplexity"/>
        <!-- Exclude NPathComplexity as it might be too strict -->
        <exclude name="NPathComplexity"/>
        <!-- Exclude TooManyPublicMethods as SessionHandler interface requires many methods -->
        <exclude name="TooManyPublicMethods"/>
        <!-- Exclude ExcessiveParameterList for configuration classes -->
        <exclude name="ExcessiveParameterList"/>
    </rule>

    <!-- Custom CyclomaticComplexity threshold -->
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="30"/>
        </properties>
    </rule>

    <!-- Custom NPathComplexity threshold -->
    <rule ref="rulesets/codesize.xml/NPathComplexity">
        <properties>
            <property name="minimum" value="350"/>
        </properties>
    </rule>

    <!-- Design Rules -->
    <rule ref="rulesets/design.xml">
        <!-- Allow eval() as we don't use it -->
        <exclude name="EvalExpression"/>
        <!-- Allow coupling between objects for session handler -->
        <exclude name="CouplingBetweenObjects"/>
    </rule>

    <!-- Naming Rules -->
    <rule ref="rulesets/naming.xml">
        <!-- Allow short variable names like $id, $gc, $e -->
        <exclude name="ShortVariable"/>
        <!-- Allow long variable names for descriptive purposes -->
        <exclude name="LongVariable"/>
        <!-- Allow short method names like gc() from SessionHandlerInterface -->
        <exclude name="ShortMethodName"/>
    </rule>

    <!-- Custom ShortVariable rule with minimum length of 1 -->
    <rule ref="rulesets/naming.xml/ShortVariable">
        <properties>
            <property name="minimum" value="1"/>
            <property name="exceptions" value="id,gc,i,j,k,e,m,a,b"/>
        </properties>
    </rule>

    <!-- Unused Code Rules -->
    <rule ref="rulesets/unusedcode.xml">
        <!-- Allow unused parameters for interface implementations -->
        <exclude name="UnusedFormalParameter"/>
    </rule>
</ruleset>
